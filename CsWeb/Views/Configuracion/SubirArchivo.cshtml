@using System.Globalization
@using CapaDominio.EntidadesNegocio;
@using CapaServicios.Servicios


@using (Html.BeginForm("SubirArchivo", "Configuracion", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     
        <div class="row">
            @*<div class="col-sm-6 form-group">
                @Html.Label("Tipo Imagen", htmlAttributes: new { @class = "col-sm-4 control-label no-padding-right" })
                <div class="col-sm-8">
                    @Html.DropDownList("TipoImagen", (IEnumerable<SelectListItem>)ViewBag.TiposImagen, new { @class = "form-control" })
                </div>
            </div>*@

            <div class="col-sm-6 form-group">
                @Html.Label("Imagen", htmlAttributes: new { @class = "col-sm-4 control-label no-padding-right" })
                <div class="col-sm-8">
                    @Html.Editor("Imagen", new { htmlAttributes = new { @class = "form-control", type = "file", title = "Tamaño máximo del archivo: 100k." } })
                </div>
            </div>
            <div class="row">
               
                    @Html.Label("La imagen debe ser tipo jpg o gif, un tamaño máximo de 50k y dimensiones máximas de 400 X 160 px", htmlAttributes: new { @class = "col-sm-8 control-label" })
               
            </div>
            </div>
        
        <div class="row">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-11">

                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-default">
                        <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
                        @(ArchivoDeRecursos.BotonRegresar)
                    </a>

                    <button class="btn btn-primary btn-default" type="submit" >@(ArchivoDeRecursos.BotonGuardar) <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span></button>
                
                </div>
            </div>
        </div>



    </div>
}

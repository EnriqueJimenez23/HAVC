<body class="no-skin">
    <!-- #section:basics/navbar.layout -->
    <div id="navbar" class="navbar">
        <div class="navbar-container" id="navbar-container">
            <!-- #section:basics/sidebar.mobile.toggle -->
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                <span class="sr-only">Toggle sidebar</span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>
            </button>
            
            <!-- /section:basics/sidebar.mobile.toggle -->
            <div class="navbar-brand pull-left">
                <!-- #section:basics/navbar.layout.brand -->


                <h2>
                    Herramienta de acompañamiento a veeduria ciudadana
                </h2>


                <!-- /section:basics/navbar.layout.brand -->
                <!-- #section:basics/navbar.toggle -->
                <!-- /section:basics/navbar.toggle -->
            </div>

            <!-- #section:basics/navbar.dropdown -->
            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                <ul class="nav ace-nav">

                    <!-- #section:basics/navbar.user_menu -->
                    <li class="">
                        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                            <span class="user-info">
                                <small>Bienvenido,</small>
                                @User.Identity.Name
                            </span>
                            <i class="ace-icon fa fa-caret-down"></i>
                        </a>

                        <ul class="user-menu dropdown-menu-right dropdown-menu dropdown- dropdown-caret dropdown-close">
                            <li>
                                <a href="@Url.Action("CerrarSesion", "Cuenta")">
                                    <i class="ace-icon fa fa-power-off"></i>
                                    Cerrar Sesión
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("CambiarContrasena", "Usuarios", new { id =0 })">
                                    <i class="ace-icon fa fa-key"></i>
                                    Cambiar contraseña
                                </a>
                            </li>

                        </ul>
                    </li>
                    <!-- /section:basics/navbar.layout -->
                    <!-- /section:basics/navbar.user_menu -->
                </ul>
            </div>

            <!-- /section:basics/navbar.dropdown -->
        </div><!-- /.navbar-container -->
    </div>

    <div id="navbar" class="navbar_pulep">
        <script type="text/javascript">
            try { ace.settings.check('navbar', 'fixed') } catch (e) { }
        </script>
        <div class="logo_pulep">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/img/Logo riav.png" width="165" height="62">
            </a>
        </div>
    </div>
    <div id="navbar" class="navbar_morada">
        <script type="text/javascript">
            try { ace.settings.check('navbar', 'fixed') } catch (e) { }
        </script>
        <div class="titulo_seccion">
        </div>
    </div>



    <!-- /section:basics/navbar.layout -->
    <div class="main-container" id="main-container">
        <!-- #section:basics/sidebar -->
        <div id="sidebar" class="sidebar responsive">

            <ul class="nav nav-list">

                @{
                    Html.RenderPartial("_Menu", ViewBag.Menu as List<Menu>);
                }

            </ul><!-- /.nav-list -->
            <!-- #section:basics/sidebar.layout.minimize -->
            <div class="sidebar-toggle sidebar-collapse" id="sidebar-collapse">
                <i class="ace-icon fa fa-angle-double-left" data-icon1="ace-icon fa fa-angle-double-left" data-icon2="ace-icon fa fa-angle-double-right"></i>
            </div>

            <!-- /section:basics/sidebar.layout.minimize -->
            <script type="text/javascript">
                try { ace.settings.check('sidebar', 'collapsed') } catch (e) { }
            </script>
        </div>

        <!-- /section:basics/sidebar -->
        <div class="main-content">
            <div class="page-content">

                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                       
                        <h2>@ViewBag.TituloFormulario</h2>
                        @*<h2>@ViewBag.SubTituloFormulario</h2>*@
                        <hr />

                        @Html.RenderMessages()
                        @RenderBody()
                        <!-- PAGE CONTENT ENDS -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-content -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->

    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='~/Content/assets/js/jquery.mobile.custom.js'>" + "<" + "/script>");
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/scriptsplantilla")
    @Scripts.Render("~/bundles/scriptspulep")
    @RenderSection("GridSection", required: false)
    @RenderSection("scripts", required: false)
